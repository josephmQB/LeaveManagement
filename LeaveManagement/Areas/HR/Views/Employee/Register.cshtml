@model LeaveManagement.ViewModel.Employee.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="my-5">
    <div class="row justify-content-center align-items-center">
        <div class="card col-sm-6">
            <h1 class="card-title text-center mt-4">Registration</h1>
            <div class="card-body">
                <form action="/HR/employee/register" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="form-group mr-3">
                        <label for="txtName">Name</label>
                        <input type="text" class="form-control" id="txtName" placeholder="Enter name" name="EmployeeName" autofocus="autofocus" />
                        @Html.ValidationMessageFor(temp => temp.EmployeeName)
                    </div>
                    <div class="form-group mr-3">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" id="txtEmail" placeholder="Email" name="Email" />
                        @Html.ValidationMessageFor(temp => temp.Email)
                    </div>
                    <div class="form-group mr-3">
                        <label for="txtMobile">Mobile</label>
                        <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" name="Phone" pattern="^[789]\d{9}$" />
                    </div>
                    <div class="form-row mr-3">
                        <div class="form-group col-sm-6">
                            <label for="txtPassword">Password</label>
                            <input type="password" class="form-control" id="txtPassword" placeholder="Password" name="Password" minlength="6"  />
                            @Html.ValidationMessageFor(temp => temp.Password)
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="txtPassword">Confirm Password</label>
                            <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword" />
                            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-row mr-3">
                        <div class="form-group col-sm-6">
                            <label for="txtRoles">Employee Role</label>
                            <select type="text" class="form-control" id="txtRoles" name="EmployeeRoles">
                                <option value="">Please select</option>
                                <option value="Employee">Employee</option>
                                <option value="PM">Project Manager</option>
                                <option value="HR">HR</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-6" id="txtSpecialPermission">
                            <input class="form-check-input" type="checkbox" id="txtSpecial" name="IsSpecialPermission" value="true">
                            <label for="txtSpecial">Special Permission</label>
                        </div>
                    </div>
                    @Html.ValidationSummary()
                    <div class="form-row justify-content-center align-items-center">
                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary align-items-center mt-4 ">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#txtSpecialPermission").hide();
        $("#txtEmail").blur(function () {
            var item = $("#txtEmail").next();
            $.ajax({
                url: "/api/account?email=" + this.value, type: "GET", success:
                    function (response) {
                        if (response == "Not Found") {
                            item.text("");
                            $("button").removeAttr("disabled");
                        }
                        else {
                            item.text("Email already registered");
                            $("button").attr("disabled","disabled");
                        }
                    },
                error: function () {
                    item.text("Error occurred");
                }
            });
        });
        var password;
        $("#txtPassword").blur(function () {
             password = this.value;
        });
        $("#txtConfirmPassword").keyup(function () {
            var confirmPassword = this.value;
            var item = $("#txtConfirmPassword").next();
            if (password == confirmPassword) {
                item.text("");
                $("button").removeAttr("disabled");
            }
            else {
                item.text("Does not match");
                $("button").attr("disabled", "disabled");
            }
        });
        $("#txtRoles").change(function () {
            if (this.value == "HR") {
                $("#txtSpecialPermission").show();
            }
            else {
                $("#txtSpecialPermission").hide();
            }
        });
    });
</script>
